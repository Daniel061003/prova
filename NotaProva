
#include <stdlib.h>
#include <stdio.h>




int main(int argc, char** argv) {

	float N1, N2, N3, N4;
	float media, mediaf, exameNota;
	float resultado, resultadoFinal;
	
	printf("Digite a nota 1: \n");
	scanf("%f", &N1);
	getchar();


	printf("Digite a nota 2: \n");
	scanf("%f", &N2);
	getchar();

	
	printf("Digite a nota 3: \n");
	scanf("%f", &N3);
	getchar();


	printf("Digite a nota 4: \n");
	scanf("%f", &N4);
	getchar();

	media = N1*2 + N2*3 + N3*4 + N4;
	mediaf = media/10;
	
	printf("Media: %.1f\n", mediaf);
	
	if(mediaf >= 7){
		printf("Aluno aprovado.\n");
	}
	else if(mediaf < 5){
		printf("Aluno reprovado.\n");
	}
	else if(mediaf >= 5 && mediaf <= 6.9){
		printf("Aluno em exame.\n");
		printf("Digite a nota obtida no exame: \n");
		scanf("%f", &exameNota);
		printf("Nota do exame: %.1f\n", exameNota);
		
		resultado = exameNota + mediaf;
		resultadoFinal = resultado / 2;
		
				if(resultadoFinal >= 5	){
					printf("Aluno aprovado.\n");
					printf("Media final: %.1f\n", resultadoFinal);
				}
				if(resultadoFinal <= 4.9){
					printf("Aluno reprovado.\n");
					printf("Media final: %.1f\n", resultadoFinal);
				}
		
	}
		

	return 0;

}
